<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    tools:showIn="@layout/fragment_detail">

    <android.support.v7.widget.Space
        android:background="@color/colorPrimaryDark"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <!-- Header: Day, Date -->
    <TextView
        android:id="@+id/detail_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_horizontal_margin"
        android:layout_marginTop="@dimen/text_vertical_margin"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:text="Today May 18" />

    <ImageView
        android:id="@+id/detail_icon"
        android:layout_width="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="Icon type"
        android:maxHeight="@dimen/today_image_height"
        android:maxWidth="@dimen/today_image_width"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:src="@drawable/art_clouds" />

    <TextView
        android:id="@+id/detail_high_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:textSize="72sp"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        tools:text="15" />

    <TextView
        android:id="@+id/detail_forecast_textview"
        android:layout_width="0dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/grey_700"
        app:layout_columnWeight="1"
        tools:text="Rain" />

    <TextView
        android:id="@+id/detail_low_textview"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/text_vertical_margin"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:textColor="@color/grey_700"
        android:textSize="36sp"
        app:layout_columnWeight="1"
        tools:text="8" />

    <android.support.v7.widget.Space
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

</android.support.v7.widget.GridLayout>

        