 --><!-- Layout for weather forecast list item for today -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_selector_white"
    android:elevation="3dp"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2">

        <TextView
            android:id="@+id/list_item_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_columnSpan="2"
            app:layout_gravity="fill"
            tools:text="34 Feb" />

        <ImageView
            android:id="@+id/list_item_icon"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/today_image_height"
            android:maxWidth="@dimen/today_image_width"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:src="@drawable/art_clouds" />


        <TextView
            android:id="@+id/list_item_high_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:textSize="72sp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="26" />


        <TextView
            android:id="@+id/list_item_forecast_textview"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:textAppearance="?android:textAppearanceLarge"
            app:layout_columnWeight="1"
            tools:text="Clouds" />

        <TextView
            android:id="@+id/list_item_low_textview"
            android:layout_marginBottom="@dimen/text_vertical_margin"
            android:gravity="center_horizontal"
            android:textSize="36sp"
            app:layout_columnWeight="1"
            tools:text="14" />

    </android.support.v7.widget.GridLayout>

</LinearLayout>